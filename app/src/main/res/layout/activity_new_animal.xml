<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.NewAnimalActivity">

    <TextView
        android:id="@+id/new_anim_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="New Animal details"
        android:textSize="34sp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/na_linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/new_anim_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:layout_marginTop="48dp"
        android:text="Submit Sales"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/na_linearLayout" />

    <LinearLayout
        android:id="@+id/na_linearLayout"
        android:layout_width="396dp"
        android:layout_height="408dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@+id/new_anim_save_btn"
        app:layout_constraintTop_toBottomOf="@+id/new_anim_details"
        tools:layout_editor_absoluteY="89dp">

        <EditText
            android:id="@+id/naId"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:hint="ID"
             />

        <EditText
            android:id="@+id/nAId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:hint="Animal Id"
             />

        <EditText
            android:id="@+id/new_anim_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:minHeight="50dp"
            android:hint="Price"
             />

        <EditText
            android:id="@+id/naQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:hint="Quantity"
             />

        <EditText
            android:id="@+id/buyingPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:minHeight="50dp"
            android:hint="Bought by"
             />

        <EditText
            android:id="@+id/naOwned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:hint="Bought From"
             />

        <EditText
            android:id="@+id/naBuyingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:minHeight="50dp"
            android:hint="Buying date"
             />

        <!-- Add other TextViews for other fields here -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

