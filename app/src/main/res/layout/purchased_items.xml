<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.NewPurchaseActivity">


    <!-- Optional Empty View (Visible when the list is empty) -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/plinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lId"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="ProductId"

                android:textSize="24sp" />

            <TextView
                android:id="@+id/lpP"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Product Price"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lpN"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Product Name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lpDescr"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Product Description"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lpDate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Purchase Date"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lpQnty"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Quantity"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lpFrom"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Purchased From"
                android:textSize="24sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>









</androidx.constraintlayout.widget.ConstraintLayout>